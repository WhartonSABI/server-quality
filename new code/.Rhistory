# Define the triangle function Delta(t)
Delta <- function(t) {
if (t >= 0 && t < 0.5) {
return(2 * t)
} else if (t >= 0.5 && t <= 1) {
return(2 * (1 - t))
} else {
return(0)
}
}
# Define the sequence of functions Delta_n(t)
Delta_n <- function(t, j, k) {
ifelse(t==0, return(t), return(Delta(2^j * t - k)))
}
